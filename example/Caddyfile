{
  order gfw before respond
}

localhost {
  # 启用GFW模块进行请求过滤
  gfw {

    # 从文件加载拦截规则
    block_rule_file block.rule

    # 也可以直接在配置中添加规则
    block_rule "malicious-bot"    # User-Agent规则
    block_rule "bad-crawler"      # User-Agent规则
    block_rule "/admin"          # URL路径规则
  }

  # 正常响应
  respond "Hello, 这是一个受GFW模块保护的网站!"
}
